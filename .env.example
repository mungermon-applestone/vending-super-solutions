
# Contentful Configuration
# The Space ID and Environment ID are public and can use the VITE_ prefix
VITE_CONTENTFUL_SPACE_ID=your_space_id_here
VITE_CONTENTFUL_ENVIRONMENT_ID=master

# The Delivery Token is sensitive and should NOT use the VITE_ prefix to prevent client exposure
# When deployed to Vercel, make sure this is set as an environment variable without the VITE_ prefix
CONTENTFUL_DELIVERY_TOKEN=your_delivery_token_here

# Email Configuration
# These variables are required for the SendGrid email functionality
# In Lovable, set these through Project Settings -> Environment Variables
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_TO=recipient@example.com
EMAIL_FROM=noreply@yourcompany.com
